{
  "env": {
    "es2020": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "semi": [0],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "no-console": [0]
  },
  "globals": {
    "artifacts": true,
    "contract": true,
    "assert": true
  }
}